    {{!-- ---------------Google Map JS API Integration------------ --}}
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrX7x7ViVdh2H_ILf8vqS7s-nH57_ESZc&libraries=places"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrX7x7ViVdh2H_ILf8vqS7s-nH57_ESZc&callback=initMap&libraries=places&v=weekly"
        async></script>
    <script>
        function initialize() {
            var input = document.getElementById('searchTextField');
            new google.maps.places.Autocomplete(input);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<style>
    body {
        background: rgba(64, 224, 208, 0.02);
    }
</style>

<body>
    {{>header}}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title" style="text-align: center; font-size:25px;">Edit User Information</h5>
                    <!-- Vertical Form -->
                    <form class="row g-3" method="POST" action="/edit-user">
                    {{#if user}}
                     <div class="col-12">
                            {{!-- <label for="inputNanme4" class="form-label">First Name</label> --}}
                            <input type="hidden" value="{{user.id}}" name='id' class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputNanme4" class="form-label">First Name</label>
                            <input type="text" value="{{user.firstname}}" name='firstname' class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputPassword4" class="form-label">Last Name</label>
                            <input type="text" value="{{user.lastname}}" name='lastname' class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputPassword4" class="form-label">Mobile</label>
                            <input type="text" value="{{user.mobile}}" name='mobile' class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Email</label>
                            <input type="text" value="{{user.email}}" name='email' class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Company Name</label>
                            <input type="text" value="{{user.companyName}}" name = "xcompanyname" class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Abn</label>
                            <input type="text" name='xabn' value="{{user.xabn}}" class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Profile status</label>
                            <input type="text" value="{{user.profilestatus}}" name='profilestatus' class="form-control" required>
                        </div><br>
                        {{/if}}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>

                    </form><br><!-- Vertical Form -->

            </div>
        </div>
</body>

</html>