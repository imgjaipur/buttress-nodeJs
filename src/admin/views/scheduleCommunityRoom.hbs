   <body>
      <section class="trsuing">
         <div class="container">
            <a href="/">
               <div class="logo">
                  <img src="../../../img/Truso_logo.png">
               </div>
            </a>
         </div>
      </section>
      <section class="untree_co-hero1">
          <div class="main-content">
       <div class="container">
           <div class="card" style="margin-top: 2% !important">
               <header class="text-center text-white" style="font-size: 30px;letter-spacing: 2px;font-weight: bold;">Schedule Community Room</header>
               {{#if msg}}
               <small class="text-center text-white" style="letter-spacing: 2px;font-weight: bold;">{{msg}}</small>
               {{/if}}
                <br>
            <div class="row pl-3">
               <div class="col-lg-9" style="margin-left: 12%;">
                    <div class="headsss">
                        {{#if data}}
                        {{#each data}}
                        <form class="form-group card-text  pt-2" action="/admin/Scheduled_community_room/{{this.hosterId}}/{{this.HfullName}}" method="POST" enctype="multipart/form-data">
                        {{/each}}
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 mb-3">
                                    <input type="text" class="form-control" placeholder="Community Room Title" name="title" value="">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    <input type="text" class="form-control heigth datetimepickerget" autocomplete="off" required name="startdatetime" placeholder="Select start date-time">
                                </div>
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    <input type="text" class="form-control heigth datetimepickerget" autocomplete="off" required name="enddatetime" placeholder="Select end date-time">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 ">
                                    <select name="select" class="form-control" id="roomUid">
                                        <option value="">Select Scheduling Type</option>
                                        <option value="0">One-time</option>
                                        <option value="1">Daily</option>
                                        <option value="3">Weekly</option>
                                        <option value="2">Week-days</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12">
                                    <span class="text-white text bold h5">Thumb-Image</span>
                                    <input type="file" class="form-control" placeholder="Community Room Title" name="bgImgURL" multiple='multiple' value="">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-groupcol-md-12 col-sm-12 mb-3">
                                    <span class="text-white text bold h5">Bg-Image</span>
                                    <input type="file" class="form-control" placeholder="Community Room Title" name="bgImgURL" multiple='multiple' value="">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    <select name="host1" class="form-control" id="roomUid">
                                        <option value="">Select host</option>
                                            {{#each data}}
                                                <option value="{{{this.uid}}}">{{this.fullName}}</option>
                                            {{/each}}
                                    </select>
                                </div>
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    <select name="host2" class="form-control" id="roomUid">
                                        <option value="">Select host</option>
                                            {{#each data}}
                                                <option value="{{{this.uid}}}">{{this.fullName}}</option>
                                            {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 mb-3">
                                    <button type="submit" class="btn btn-primary">Schedule Community Room <i class="far fa-edit"></i></button>
                                </div>
                            </div>
                        </form>
                        {{/if}}
                        <br>
                    </div>
               </div>
           </div>
      </div>
       </div>
      </section>
