<body>
     {{>header}}
     <div class="  col-lg-12 mt-4 p-3">
          <div class="text-center">
               <header class="text-white" style="font-size: 30px; font-weight:bold;"><h2 style="color: rgba(4, 3, 37, 0.513);">USERS INFORMATION</h2></header>
          </div>
          <table id="example" class="table mt-3 col-lg-8 table-light table-hover" style="width:100%">
               <thead>
                    <tr class="">
                         <th>Name</th>
                         <th>Mobile</th>
                         <th>Email</th>
                         <th>status</th>
                         <th>blocked</th>
                         <th>profilestatus</th>
                         <th>Actions</th>
                    </tr>
               </thead>
               <tbody>
               </tbody>
               <tfoot>
               </tfoot>
          </table>
          <script type="text/javascript">
               $(document).ready(function () {
                    $('#example').DataTable({
                         "processing": true,
                         "serverSide": true,
                         "searching": false,
                         ajax: {
                              url: '/usersdatatable',
                              type: 'GET',
                              dataSrc: 'data'
                         },
                         "lengthMenu": [5, 8, 10, 50],
                         columns: [
                              { data: 'name' },
                              { data: 'mobile' },
                              { data: 'email' },
                              { data: "status" },
                              { data: "blocked" },
                              { data: "profilestatus"},
                              { data: "actions" }

                         ]
                    });
               });
          </script>
