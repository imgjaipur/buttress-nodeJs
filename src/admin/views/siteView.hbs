<style>
     body {
          background: rgba(64, 224, 208, 0.02);
     }
</style>

<body>
     {{>header}}
     <div class="col-lg-12">
          <div class="card">
               <div class="card-body">
                    <h3 class="card-title" style="text-align: center;">Add Site Information</h5>
                    <!-- Vertical Form -->
                    <form class="row g-3">
                         <div class="col-12">
                              <label for="inputNanme4" class="form-label">Site Name</label>
                              <input type="text" name = 'site' placeholder="Enter Site Name" class="form-control">
                         </div>
                         <div class="col-12">
                              <label for="inputEmail4" class="form-label">Site Address</label>
                              <input type="text" name = 'siteAddress' class="form-control"  placeholder="Enter Site Address" id="inputEmail4">
                         </div>
                         <div class="col-12">
                              <label for="inputPassword4" class="form-label">Construction Manager</label>
                              <input type="text" name = 'cmanager' class="form-control" placeholder="Construction Manager">
                         </div>
                         <div class="col-12">
                              <label for="inputAddress" class="form-label">Site code </label>
                              <input type="text" name = 'sitecode' class="form-control"  placeholder="Enter Site code">
                         </div>
                          <div class="col-12">
                              <label for="inputAddress" class="form-label">Location</label>
                              <input type="text" name = 'longitude' class="form-control"  placeholder="longitude"><br>
                              <input type="text" name ='latitude' class="form-control"  placeholder="latitude">

                         </div>
                          <div class="col-12">
                              <label for="inputAddress" class="form-label">Site Start Date</label>
                              <input type="date" name = 'startdate' class="form-control" >
                         </div>
                          <div class="col-12">
                              <label for="inputAddress" class="form-label">Site End Date</label>
                              <input type="date" name = 'enddate' class="form-control" >
                         </div>
                          <div class="col-12">
                              <label for="inputAddress" class="form-label">Users</label>
                              <input type="text" name = 'users' class="form-control" >
                         </div>
                         <div class="text-center">
                              <button type="submit" class="btn btn-primary">Submit</button>
                              <button type="reset" class="btn btn-secondary">Reset</button>
                         </div>
                         
                    </form><!-- Vertical Form -->

               </div>
          </div>
</body>

</html>