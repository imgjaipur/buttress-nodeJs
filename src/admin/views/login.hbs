    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
        integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
        crossorigin="anonymous"></script>

</head>
<style>
    body {
        font: 400 15px/1.8 Lato, sans-serif;
        background: url("http://svmr.apphb.com/assets/img/backgrounds/1.jpg");
        width: 100%;
        height: 80%;
    }

    .card {
        background: url("http://svmr.apphb.com/assets/img/backgrounds/1.jpg");
        background-size: fixed;
        background-position: center;
        margin-top: 10% !important;
        border-radius: 3% !important;
        box-shadow: 1px 1px 2px rgb(255, 187, 1), 0 0 10px rgb(247, 105, 11), 0 0 5px rgb(238, 116, 59);
    }

    .btn {
        background-color: rgb(255, 102, 0);
        padding-left: 99px;
        padding-right: 99px;
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        letter-spacing: 5px;
    }

    .card-title {
        letter-spacing: 2px;
        transition-duration: 0.5s;
    }

    .card-title:hover {
        color: rgb(243, 127, 19) !important;

    }
</style>

<body>
    <div class="login-img">
        <div class="container">
            <div class="logo">
                <img src="../img/Truso_logo.png" style="width: 20%; margin-top:10px">
            </div>
            <br>
            <div class="card col-lg-4 text-center m-auto" style="">
                <div class="card-body">
                    {{#if dataF}}
                    <span class="text-danger">**{{dataF}}**</span>
                    {{/if}}
                    <h4 class="card-title text-white text-bold">Login-Page</h4>
                    <form class="form-group card-text  pt-2" method="POST" action="/login">
                        <div class="p-3">
                            <input class="form-control" type="email" name="email" placeholder="Email">
                        </div>
                        <div class="p-3">
                            <input class="form-control" type="password" name="password" placeholder="Password">
                        </div><br>
                        {{#if data_incorrect}}
                        <span class="text-danger">**{{data_incorrect}}**</span>
                        {{/if}}
                        <div class="p-3 mt-1">
                            <button type="submit" class=" btn text-white">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>