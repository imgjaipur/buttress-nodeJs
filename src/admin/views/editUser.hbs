        crossorigin="anonymous"></script>


</head>
<style>
    body {
        font: 400 15px/1.8 Lato, sans-serif;
        width: 100%;
        height: 80%;
        position: fixed;
    }

    .card {
        background: transparent;
        background-position: center;
        margin-top: 1% !important;
        margin-bottom: 3% !important;
        margin-left: 16%;
        border-radius: 2% !important;
        box-shadow: 1px 1px 2px rgb(255, 187, 1), 0 0 10px rgb(247, 105, 11), 0 0 5px rgb(238, 116, 59);

    }

    .btn {
        background-color: rgb(36, 35, 34);
        padding-left: 152px;
        padding-right: 152px;
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        letter-spacing: 5px;
    }

    .btn:hover {
        background-color: rgb(248, 241, 232);
        color: rgb(238, 240, 245) !important;
        border: 1px solid rgb(225, 226, 255);
    }

    .card-title {
        color: rgb(255, 255, 255);
        font-weight: bold;
        letter-spacing: 2px;
        transition-duration: 0.5s;
    }

    .card-title:hover {
        color: rgb(238, 81, 9) !important;

    }

    .heigth {
        height: 50px
    }

    .imgphone {
        margin-top: 18% !important;
        margin-left: 28% !important;
        width: 550px;
    }
</style>

<body>
    {{>header}}
    <div class="login-img">
        <div class="container">
            <div class="row">
                <div class="card col-lg-8 text-center " style="">
                    <div class="card-body">
                        <h4 class="card-title">Edit User</h4>
                        <form class="form-group card-text  pt-2" action="/edit-user" method="POST">
                            {{#if user}}
                            <div class="form-group col-md-12 col-sm-12 mb-3">
                                <input type="hidden" class="form-control heigth" name="id" value="{{user.id}}"
                                    placeholder="id is here">
                            </div>
                            {{/if}}
                            <div class="form row mb-1">
                                <div class="col-6 ">
                                    {{#if user}}
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="text1" class="form-control heigth" name="firstname"
                                            value="{{user.firstname}}" placeholder="Enter Your First name">
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="col-6">
                                    {{#if user}}
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="text1" class="form-control heigth" name="lastname"
                                            value="{{user.lastname}}" placeholder="Enter Your Last name">
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="form row">
                                <div class="col-6">
                                    {{#if user}}
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="number" class="form-control heigth" name="mobile"
                                            value="{{user.mobile}}">
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="col-6">
                                    {{#if user}}
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="email" class="form-control heigth" name="email"
                                            value="{{user.email}}">
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="form row">
                                <div class="col-4">
                                    <div class="form  col-md-12 col-sm-12 mb-3">
                                        <input type="text" class="form-control heigth" name="xcompanyname"
                                            value="{{user.companyName}}" placeholder="Enter your Company name">
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="text" class="form-control heigth" name="xabn" placeholder="ABN"
                                            value="{{user.xabn}}">
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group col-md-12 col-sm-12 mb-3">
                                        <input type="text" class="form-control heigth"
                                            placeholder="Enter your Ex-Qualification" name="xqualifications"
                                            value="{{user.xqualifications}}">
                                    </div>
                                </div>

                            </div>

                            <div class="form-group col-md-12 col-sm-12 mb-3">
                                <input type="text1" class="form-control heigth" placeholder="Enter your Ex-Whitecard"
                                    name="xwhitecard" value="{{user.xwhitecard}}">
                            </div>
                            {{#if user}}
                            <div class="form-group col-md-12 col-sm-12 mb-3">
                                <input type="text1" class="form-control heigth" name="blocked" value="{{user.blocked}}"
                                    placeholder="Enter blocked status">
                            </div>
                            {{/if}}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

</html>